{
    "name": "itineris/gf-sagepay",
    "license": "proprietary",
    "require": {
        "php": "^7.2"
    },
    "require-dev": {
        "neronmoon/scriptsdev": "^0.1.2",
        "wp-coding-standards/wpcs": "^0.14.1"
    },
    "autoload": {
        "psr-4": {
            "Itineris\\SagePay\\": "src/"
        }
    },
    "scripts": {
        "build": [
            "rm -fr vendor",
            "composer install --no-dev --prefer-dist --optimize-autoloader --no-suggest",
            "composer archive --format=zip --dir=release --file=gf-sagepay"
        ],
        "check-style": "phpcs --standard=ruleset.xml --colors -p -s"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "scripts-dev": {
            "post-install-cmd": "phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs",
            "post-update-cmd": "phpcs --config-set installed_paths vendor/wp-coding-standards/wpcs"
        }
    },
    "archive": {
        "exclude": [
            "/*",
            ".*",
            "!/languages",
            "!/src",
            "!/vendor",
            "!/LICENSE",
            "!/README.txt",
            "!/*.php"
        ]
    }
}
